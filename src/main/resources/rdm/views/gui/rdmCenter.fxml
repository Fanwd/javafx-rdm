<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import java.lang.Double?>
<?import java.lang.String?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.fwd.rdm.controller.gui.RdmCenterController"
            fitToHeight="true" fitToWidth="true">
    <padding>
        <Insets left="10" right="10" top="15" bottom="15"/>
    </padding>
    <VBox fx:id="rootBox" visible="false" spacing="10" alignment="TOP_LEFT">
        <GridPane fx:id="gridPane" alignment="CENTER_LEFT" hgap="10" vgap="10">
            <columnConstraints>
                <!--第一列右对齐，第二列左对齐-->
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints halignment="LEFT"/>
            </columnConstraints>
            <Label fx:id="keyTypeLabel" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="keyTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="TTL:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Label fx:id="ttlLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </GridPane>
        <Separator orientation="HORIZONTAL"></Separator>
        <HBox fx:id="hashTableBox" visible="true" managed="true" spacing="5">
            <!--field显示-->
            <TableView fx:id="hashTableView" prefHeight="250" HBox.hgrow="ALWAYS">
                <maxHeight>
                    <Double fx:constant="MAX_VALUE"/>
                </maxHeight>
                <columns>
                    <TableColumn text="Index">
                        <cellValueFactory>
                            <PropertyValueFactory property="index"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Field">
                        <cellValueFactory>
                            <PropertyValueFactory property="field"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Value" prefWidth="400">
                        <maxWidth>
                            <Double fx:constant="MAX_VALUE"></Double>
                        </maxWidth>
                        <cellValueFactory>
                            <PropertyValueFactory property="value"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <VBox prefWidth="100" alignment="TOP_CENTER" spacing="5" >
                <Button text="Add" onAction="#addHash">
                    <maxWidth>
                        <Double fx:constant="MAX_VALUE"></Double>
                    </maxWidth>
                    <graphic>
                        <FontAwesomeIconView fill="green" glyphName="PLUS_CIRCLE"></FontAwesomeIconView>
                    </graphic>
                </Button>
                <Button text="Delete" onAction="#deleteHash">
                    <maxWidth>
                        <Double fx:constant="MAX_VALUE"></Double>
                    </maxWidth>
                    <graphic>
                        <FontAwesomeIconView fill="red" glyphName="TRASH"></FontAwesomeIconView>
                    </graphic>
                </Button>
                <Button text="Refresh" onAction="#refreshHash">
                    <maxWidth>
                        <Double fx:constant="MAX_VALUE"></Double>
                    </maxWidth>
                    <graphic>
                        <FontAwesomeIconView fill="lightgreen" glyphName="REFRESH"/>
                    </graphic>
                </Button>
            </VBox>
        </HBox>
        <VBox fx:id="valueBox" spacing="5" VBox.vgrow="ALWAYS">
            <Separator fx:id="dragLine" orientation="HORIZONTAL"></Separator>
            <VBox fx:id="hashFieldBox" spacing="5">
                <Label text="Field:"></Label>
                <TextArea fx:id="fieldTextArea" editable="false" wrapText="true"></TextArea>
            </VBox>
            <!--value显示-->
            <StackPane>
                <HBox alignment="CENTER_LEFT">
                    <Label text="Value-size:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label fx:id="valueSizeLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <Label text="View as:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <ChoiceBox value="Text" fx:id="viewType" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Text"/>
                                <String fx:value="Json"/>
                            </FXCollections>
                        </items>
                    </ChoiceBox>
                </HBox>
            </StackPane>
            <TextArea fx:id="valueTextArea" wrapText="true" VBox.vgrow="ALWAYS"/>
        </VBox>
        <HBox alignment="CENTER_RIGHT">
            <Button text="save" onAction="#save">
                <graphic>
                    <FontAwesomeIconView glyphName="FLOPPY_ALT"/>
                </graphic>
            </Button>
        </HBox>
    </VBox>
</ScrollPane>